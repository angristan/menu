<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="10" vgap="10"
          xmlns="http://javafx.com/javafx/8.0.999-ea" fx:controller="ffw_menu.Controller">
    <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" GridPane.rowIndex="0"
               GridPane.rowSpan="1">
        <image>
            <Image url="@logo-ffw.png"/>
        </image>
        <GridPane.margin>
            <Insets left="30.0"/>
        </GridPane.margin>
    </ImageView>
    <Text fx:id="loginTitle" text="Login" GridPane.rowIndex="1"/>
    <TextField fx:id="emailField" promptText="email" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <PasswordField fx:id="passwordField" promptText="password" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <Button onAction="#onLoginButtonClicked" text="Login" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
    </rowConstraints>
</GridPane>
